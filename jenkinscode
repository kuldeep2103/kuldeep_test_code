pipeline {

    agent any
    tools {
        maven 'maven' 
    }
    stages {
        stage('Compile stage') {
            steps {
                sh "mvn clean install" 
        }
    }

         stage('testing stage') {
             steps {
                sh "mvn test"
        }
    }
		stage('build && SonarQube analysis') {
		  steps{
				withSonarQubeEnv('sonarqube"){
			sh 'mvn clean install sonar:sonar'
				}	
			}
		}	
	stage('Deploy') {
            steps {
                sh "scp -r /root/.jenkins/workspace/declpipeline/in28minutes-web-servlet-jsp/target/*.war root@192.168.43.42:/opt/apache-tomcat-7.0.100/webapps"
            }
        }
    }
    }
